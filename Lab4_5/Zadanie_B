// Zadanie 11

class Auto {
    constructor(rok, przebieg, cena_wyjsciowa, cena_koncowa) {
        this.rok = rok;
        this.przebieg = przebieg;
        this.cena_wyjsciowa = cena_wyjsciowa;
        this.cena_koncowa = cena_koncowa;
    }

    powiekszCeneWyjsciowa() {
        this.cena_wyjsciowa += 1000;
    }

    obnizCeneKoncowaZaKazdyRok() {
        const wiekAutu = new Date().getFullYear() - this.rok;
        this.cena_koncowa -= wiekAutu * 1000;
    }

    obnizCeneKoncowaZaKazde100000Km() {
        const iloscRazy100000Km = Math.floor(this.przebieg / 100000);
        this.cena_koncowa -= iloscRazy100000Km * 10000;
    }

    dodajPrzebiegIRok(przebieg, rok) {
        this.przebieg += przebieg;
        this.rok += rok;
        this.obnizCeneKoncowaZaKazdyRok();
        this.obnizCeneKoncowaZaKazde100000Km();
    }

    toString() {
        return `Auto (${this.rok})`;
    }
}

const samochody = [];

function dodajAuto(auto) {
    if (auto.cena_wyjsciowa > 10000) {
        samochody.push(auto);
    }
}

function zwiekszRokWszystkimAutom() {
    samochody.forEach(auto => auto.rok++);
}